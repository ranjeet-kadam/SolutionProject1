@model IEnumerable<EChallan1.Web.Models.Issue>

@{
    ViewData["Title"] = "Index";
}

<h1>Issue </h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Issues)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssueDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Issues)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssueDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
