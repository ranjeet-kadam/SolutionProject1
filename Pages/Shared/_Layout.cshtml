<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EChallan.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        @* <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="color:aqua";>*@
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
           @* <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">*@
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">EChallan1.Web</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Manage</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item"
                                       asp-area="User1" asp-controller="ChallanDetails" asp-action="Index">ChallanDetails</a>
                                    <a class="dropdown-item"
                                       asp-area="User1" asp-controller="Challans" asp-action="Index">Challans</a>
                                    <a class="dropdown-item"
                                       asp-area="User1" asp-controller="Issues" asp-action="Index">Issues</a>
                                    <a class="dropdown-item"
                                       asp-area="User1" asp-controller="PaymentMethods" asp-action="Index">PaymentMethods</a>
                                    @* <a class="dropdown-item"
                                    asp-area="User1" asp-controller="Customers" asp-action="Index">Customers</a>*@
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">User</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item"
                                       asp-area="User1" asp-controller="Challans" asp-action="Index1">Challans</a>
                                    <a class="dropdown-item"
                                       asp-area="User1" asp-controller="Customers" asp-action="Index1">Customers</a>
                                    <a class="dropdown-item"
                                       asp-area="User1" asp-controller="ChallanDetails" asp-action="Index1">ChallanDetails</a>
                                    @* <a class="dropdown-item"
                                    asp-area="User1" asp-controller="Issues" asp-action="Index">Issues</a>
                                    <a class="dropdown-item"
                                    asp-area="User1" asp-controller="PaymentMethods" asp-action="Index">PaymentMethods</a>*@
                                </div>
                            </li>
                        </ul>
                    </div>
                    @* Inserting the Login Partial View *@
                    <partial name="_LoginPartial" />
                </div>
            </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
       @* <div class="container">
            &copy; 2022 - EChallan.Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>*@
        <a href="/swagger" target="_blank">Open API Documentation</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
